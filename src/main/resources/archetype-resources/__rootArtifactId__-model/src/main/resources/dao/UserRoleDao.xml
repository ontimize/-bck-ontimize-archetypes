#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
	xmlns="http://www.ontimize.com/schema/jdbc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
	catalog="" schema="${symbol_dollar}{mainschema}" table="TUSER_ROLE"
	datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
	<DeleteKeys>
		<Column>usro_id</Column>
	</DeleteKeys>
	<UpdateKeys>
		<Column>usro_id</Column>
	</UpdateKeys>
	<Queries>
		<Query id="login">
			<Sentence>
                <![CDATA[
                    SELECT
                        ${symbol_pound}COLUMNS${symbol_pound}
                    FROM ${symbol_dollar}{mainschema}.TUSER
                    ${symbol_pound}WHERE${symbol_pound}
                    ${symbol_pound}ORDER${symbol_pound}
                ]]>
            </Sentence>
		</Query>
		<Query id="userRole">
			<AmbiguousColumns>
				<AmbiguousColumn name="USER_" prefix="tu" />
				<AmbiguousColumn name="ID_ROLENAME" prefix="tr" />
			</AmbiguousColumns>
			<Sentence>
					<![CDATA[
					select
						${symbol_pound}COLUMNS${symbol_pound}
					from
						${symbol_dollar}{mainschema}.TUSER tu
						JOIN ${symbol_dollar}{mainschema}.TUSER_ROLE tur ON tu.USER_ = tur.USER_
						JOIN ${symbol_dollar}{mainschema}.TROLE tr ON tur.ID_ROLENAME = tr.ID_ROLENAME
					${symbol_pound}WHERE${symbol_pound}
					${symbol_pound}ORDER${symbol_pound}
					]]>
			</Sentence>
		</Query>
		<Query id="serverPermissions">
			<AmbiguousColumns>
				<AmbiguousColumn name="ID_ROLENAME" prefix="tr" />
				<AmbiguousColumn name="ID_SERVER_PERMISSION" prefix="tsp" />
			</AmbiguousColumns>
			<Sentence>
					<![CDATA[
					select
						${symbol_pound}COLUMNS${symbol_pound}
					from
						${symbol_dollar}{mainschema}.TROLE tr
						JOIN ${symbol_dollar}{mainschema}.TROLE_SERVER_PERMISSION trsp ON tr.ID_ROLENAME = trsp.ID_ROLENAME
						JOIN ${symbol_dollar}{mainschema}.TSERVER_PERMISSION tsp ON trsp.ID_SERVER_PERMISSION = tsp.ID_SERVER_PERMISSION
					${symbol_pound}WHERE${symbol_pound}
					${symbol_pound}ORDER${symbol_pound}
					]]>
		</Sentence>
		</Query>
		<Query id="clientPermissions">
			<Sentence>
					<![CDATA[
					select
						${symbol_pound}COLUMNS${symbol_pound}
					from
						${symbol_dollar}{mainschema}.TROLE tr
					${symbol_pound}WHERE${symbol_pound}
					${symbol_pound}ORDER${symbol_pound}
					]]>
		</Sentence>
		</Query>
	</Queries>
</JdbcEntitySetup>